    "version": "0.2.0",
    "configurations": [

        {
            "name": "ServerTest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/component/interactive/ServerTest",
            "cwd": "${workspaceFolder}/build/tests/component/interactive",
            "externalConsole": false
        },

        {
            "name": "ClientTest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/component/interactive/ClientTest",
            "cwd": "${workspaceFolder}/build/tests/component/interactive",
            "externalConsole": false
        },

        {
            "name": "ClientTest Win",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/component/interactive/Debug/ClientTest.exe",
            "args": ["127.0.0.1", "12345"],
            "cwd": "${workspaceFolder}/build/Debug",
            "externalConsole": true
        },

        {
            "name": "libinterutils-unit-tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/component/interactive/utils/tests/unit/libinterutils-unit-tests",
            "cwd": "${workspaceFolder}/build/tests/component/interactive/utils/tests/unit",
            "externalConsole": false
        },

        {
            "name": "HandshakeTest Unix",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/component/handshake/HandshakeTest",
            "args": ["./handshake_sock"],
            "cwd": "${workspaceFolder}/build/tests/component/handshake",
            "externalConsole": false
        },

        {
            "name": "HandshakeTest Inet",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/component/handshake/HandshakeTest",
            "args": ["127.0.0.1", "12345"],
            "cwd": "${workspaceFolder}/build/tests/component/handshake",
            "externalConsole": false
        },

        {
            "name": "HandshakeTest Inet Win",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/component/handshake/Debug/HandshakeTest.exe",
            "args": ["127.0.0.1", "12345"],
            "cwd": "${workspaceFolder}/build/Debug",
            "externalConsole": true
        },
    ]
}
